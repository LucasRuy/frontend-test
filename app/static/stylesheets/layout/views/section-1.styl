.ranking
  display block
  width 375px
  margin 0px auto
  padding 130px 15px 0px

  +el('header')
    position relative
    margin 0px
    clearfix()

    .r-col
      padding 0px

      +el('title')
        font-size 30px

      &:nth-child(1)
        position absolute
        bottom -12px
        left -30px

      &:nth-child(2)
        grid(100%)
        padding 10px 35px
        text-align right
        text-transform uppercase

        background-color c-white
        border-radius 50px 4px 4px 150px
        color c-black


  +el('body')
    grid(100%)
    margin-top 15px

    background-color c-white
    border-radius 4px
    color c-black

    position relative

    +el('item')
      position relative
      grid(100%)
      padding 15px
      transition t-default

      .item-image
        grid(68px)
        height 68px
        border-radius 68px
        overflow hidden
        position relative
        border 4px solid c-red

        img
          width 100px
          position absolute
          top 50%
          left 50%
          transform translate3D(-50%, -50%, 0px)

      .item-divisor
        grid(75%)
        padding-left 85px
        position absolute
        top 50%
        transform translateY(-50%)

        h3
          color c-red
        h6
          color c-gray


      &:nth-child(2n+2)
        background-color c-gray-light

      &:first-child
        border-radius 3px 3px 0px 0px

      &:last-child
        border-radius 0px 0px 3px 3px

      for i in (1..6)
        &:nth-child({i})::after
          content \'i\'
          text-align center
          line-height 19px
          font-size 14px
          font-weight 700

          position absolute
          top 65px
          left 65px

          display block
          width 22px
          height 22px

          background-color c-white
          color c-gray

          border-radius 20px
          border 2px solid c-gray

      &:hover
        background-color c-red
        .item-image
          border-color c-white
        .item-divisor
          h3
            color c-white
          h6
            color c-black